@model student_management_system.Models.Student

<h2>Add Student</h2>
<form asp-action="Edit" asp-controller="Student" asp-route-id="@Model.StudentID" method="post">
    <input type="hidden" asp-for="StudentID" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NIC"></label>
        <input asp-for="NIC" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DOB"></label>
        <input asp-for="DOB" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Contact"></label>
        <input asp-for="Contact" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EnrollmentYear"></label>
        <input asp-for="EnrollmentYear" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <p>Form will post to: @Url.Action("Edit", "Student", new { id = Model.StudentID })</p>

</form>
